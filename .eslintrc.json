{
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "node": true,
    "es2020": true,
    "commonjs": true,
    "mocha": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "rules": {
    "no-empty": "off",
    "no-only-tests/no-only-tests": "error"
  },
  "plugins": ["no-only-tests"],
  "globals": {
    "BigInt": true
  }
}
